@model List<Tarea2.Models.CharacterInfo>

@{
    ViewData["Title"] = "Find";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barra de Búsqueda con Bootstrap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
            font-family: 'Poppins', sans-serif;
        }

        .search-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 40px;
            background: linear-gradient(145deg, #e6f7ff, #ffffff);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .search-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .search-header h1 {
            color: #007bff;
            font-weight: 700;
        }

        .search-header p {
            color: #6c757d;
        }

        .search-box {
            position: relative;
        }

        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #adb5bd;
            font-size: 1.2rem;
        }

        .search-input {
            padding-left: 55px;
            border-radius: 50px;
            height: 50px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
            background-color: #f1f3f5;
        }

        .search-input:focus {
            border-color: #007bff;
            background-color: #ffffff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.1);
        }

        .search-btn {
            border-radius: 50px;
            padding: 12px 30px;
            background: #007bff;
            border: none;
            transition: all 0.3s;
            font-weight: 600;
        }

        .search-btn:hover {
            background: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f1f3f5;
        }

        .table thead th {
            border-bottom: 2px solid #dee2e6;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="search-container">
            <div class="search-header">
                <h1><img src="~/images/ATchibi.png" style="width: 100px; height: auto;"> Búsqueda</h1>
                <p class="mt-3">Encuentra lo que necesitas en segundos</p>
            </div>
            
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="SearchBox" class="form-control search-input" placeholder="¿Que umamusme eligiras?">
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <button class="btn search-btn me-md-2" onclick="Search()">
                    <i class="fas fa-search me-2"></i>Buscar
                </button>
            </div>

            <div class="search-footer">
                <p class="text-center mt-4 text-muted">&copy; 2023 MiSitioWeb.com - <a href="#">Política de Privacidad</a></p>
            </div>
        </div>
    </div>

    <table id="tablaPersonajes" class="table table-hover mt-5">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Nombre (EN)</th>
                <th>Nombre (JP)</th>
                <th>Categoría</th>
                <th>Colores</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script>
        const umas = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
        function Search(){
            const query = document.getElementById('SearchBox').value.toLowerCase();
            const tbody = document.getElementById('tablaPersonajes').querySelector('tbody');

            const resultado = umas.filter(c => 
                c.name_en.toLowerCase().includes(query)
            );

            tbody.innerHTML = '';

            resultado.forEach(p => {
                const row = document.createElement('tr');
                row.innerHTML =
                `<td>${p.id}</td>
                 <td><img src="${p.thumb_img}" style="width:80px;border-radius:8px;"></td>
                 <td>${p.name_en}</td>
                 <td>${p.name_jp}</td>
                 <td>${p.category_label}</td>
                 <td>
                    <span style="display:inline-block;width:20px;height:20px;background:${p.color_main};border-radius:50%;"></span>
                    <span style="display:inline-block;width:20px;height:20px;background:${p.color_sub};border-radius:50%;"></span>
                 </td>`;
                
                tbody.appendChild(row);
            });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>