@model List<Tarea2.Models.CharacterInfo>
    
@{
    ViewData["Title"] = "Find";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barra de Búsqueda con Bootstrap</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .search-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .search-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .search-header h1 {
            color: #3498db;
            font-weight: 600;
        }
        .search-header p {
            color: #7f8c8d;
        }
        .search-box {
            position: relative;
        }
        .search-icon {
            position: absolute;
            left: 15px;
            top: 12px;
            color: #7f8c8d;
        }
        .search-input {
            padding-left: 45px;
            border-radius: 50px;
            height: 45px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }
        .search-input:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
        .search-btn {
            border-radius: 50px;
            padding: 10px 25px;
            background: #3498db;
            border: none;
            transition: all 0.3s;
        }
        .search-btn:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }
        .search-examples {
            margin-top: 20px;
            text-align: center;
            color: #95a5a6;
            font-size: 0.9rem;
        }
        .example-link {
            color: #3498db;
            text-decoration: none;
            margin: 0 5px;
        }
        .example-link:hover {
            text-decoration: underline;
        }
        .search-footer {
            margin-top: 40px;
            text-align: center;
            color: #95a5a6;
            font-size: 0.85rem;
        }
        .advanced-search {
            margin-top: 30px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="search-container">
            <div class="search-header">
                <h1><img src="~/images/ATchibi.png" style="width: 100px; height: auto;">Búsqueda</h1>
                <p class="mt-3">Encuentra lo que necesitas en segundos</p>
            </div>
            
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="SearchBox" class="form-control search-input" placeholder="¿Que umamusme eligiras?">
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <button class="btn search-btn me-md-2" onclick="Search()">
                    <i class="fas fa-search me-2"></i>Buscar
                </button>
            </div>

            <div class="search-footer">
                <p>© 2023 MiSitioWeb.com - <a href="#">Política de Privacidad</a></p>
            </div>
        </div>
    </div>

    <table id="tablaPersonajes" class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Nombre (EN)</th>
                <th>Nombre (JP)</th>
                <th>Categoría</th>
                <th>Colores</th>
            </tr>
        </thead>

        <tbody>             
        </tbody>

    </table>

    <script>

        const umas = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));

        function Search(){
            const query = document.getElementById('SearchBox').value.toLowerCase();
            const tbody = document.getElementById('tablaPersonajes').querySelector('tbody');

            const resultado = umas.filter(c => 
                c.name_en.toLowerCase().includes(query)
            );

            tbody.innerHTML = '';

            resultado.forEach(
                p => {
                    const row = document.createElement('tr');
                    row.innerHTML =
                    `<td>${p.id}</td>
                    <td><img src="${p.thumb_img}" style="width:80px;border-radius:8px;"></td>
                    <td>${p.name_en}</td>
                    <td>${p.name_jp}</td>
                    <td>${p.category_label}</td>
                    <td>
                        <span style="display:inline-block;width:20px;height:20px;background:${p.color_main};"></span>
                        <span style="display:inline-block;width:20px;height:20px;background:${p.color_sub};"></span>
                    </td>`;
                    
                    tbody.appendChild(row);
                }
            )
        }
    </script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body> 
</html>